<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Elvin | URL Shortener</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.ico" />

    <style>
      /* Reset box-sizing agar input/button pas dengan container */
      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #1e293b, #0f172a);
        color: #f8fafc;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 15px;
      }

      .container {
        background: #1e293b;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 450px;
        text-align: center;
      }

      h2 {
        margin-bottom: 20px;
        font-size: 1.6rem;
        color: #38bdf8;
      }

      input,
      button {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        font-size: 0.95rem;
        outline: none;
        border: none;
      }

      input {
        background: #334155;
        color: #f1f5f9;
        margin-bottom: 15px;
      }

      input:focus {
        box-shadow: 0px 0px 5px #38bdf8;
      }

      button {
        background: #38bdf8;
        color: #0f172a;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
      }

      button:hover {
        background: #0ea5e9;
        transform: translateY(-2px);
      }

      .result {
        margin-top: 15px;
        font-size: 0.95rem;
        background: #334155;
        padding: 10px;
        border-radius: 8px;
        word-wrap: break-word;
        display: none;
      }

      .result a {
        color: #38bdf8;
        text-decoration: none;
        font-weight: 500;
      }

      @media (max-width: 400px) {
        .container {
          padding: 20px;
        }

        input,
        button {
          font-size: 0.9rem;
        }

        h2 {
          font-size: 1.3rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>URL Shortener</h2>
      <input
        id="urlInput"
        type="url"
        placeholder="Masukkan URL lengkap (https://...)"
        required
      />
      <button onclick="generate()">Generate</button>
      <div id="result" class="result"></div>
    </div>

    <script>
      async function generate() {
        const url = document.getElementById("urlInput").value.trim();
        const resultBox = document.getElementById("result");

        if (!url) {
          resultBox.style.display = "block";
          resultBox.innerHTML = "⚠️ Harap masukkan URL terlebih dahulu.";
          return;
        }

        try {
          const response = await fetch("/shorten", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ originalUrl: url }),
          });

          const data = await response.json();

          if (data.shortUrl) {
            resultBox.style.display = "block";
            resultBox.innerHTML = `
            ✅ Short URL:<br>
            <a href="${data.shortUrl}" target="_blank">${data.shortUrl}</a>
          `;
          } else {
            resultBox.style.display = "block";
            resultBox.innerHTML = data.message || "❌ Error generating URL";
          }
        } catch (err) {
          resultBox.style.display = "block";
          resultBox.innerHTML = "❌ Server error. Please try again.";
          console.error("Generate URL error:", err);
        }
      }
    </script>
  </body>
</html>
